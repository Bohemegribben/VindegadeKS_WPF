<Page x:Class="VindegadeKS_WPF.LessonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VindegadeKS_WPF"
      mc:Ignorable="d"
      Background="DimGray"
      d:DesignHeight="1000" d:DesignWidth="680"
      Title="LessonPage">

    <Grid>
        <!-- Pre-existing lessons -->
        <StackPanel Background="AliceBlue" HorizontalAlignment="Right" Height="425" Margin="0,20,20,0" VerticalAlignment="Top" Width="185">
            <!-- When clicking a button, show data responding to lesson -->
            <!-- Autocreate a new button with correct event -->
            <!-- Idea: Giv all buttons same event, but send different ids? -->
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
            <Button Content="Button"/>
            <Button Content="Button"/>

        </StackPanel>
        <StackPanel Background="AliceBlue" HorizontalAlignment="Left" Height="425" Margin="20,20,0,0" VerticalAlignment="Top" Width="435">
            <TextBlock x:Name="Les_DisName_TextBlock" TextWrapping="Wrap" Text="TextBlock"/>
            <TextBlock x:Name="Les_DisType_TextBlock" TextWrapping="Wrap" Text="TextBlock"/>
            <TextBlock x:Name="Les_DisDescription_TextBlock" TextWrapping="Wrap" Text="TextBlock"/>

        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Right" Margin="0,480,20,0" VerticalAlignment="Top" Height="50" Width="185"/>
        <Button Content="Button" HorizontalAlignment="Right" Margin="0,550,20,0" VerticalAlignment="Top" Height="50" Width="185"/>
        <Button Content="Button" HorizontalAlignment="Right" Margin="0,620,20,0" VerticalAlignment="Top" Height="50" Width="185"/>
        <Button Content="Button" HorizontalAlignment="Right" Margin="0,690,20,0" VerticalAlignment="Top" Height="50" Width="185"/>

        <TextBox  HorizontalAlignment="Left" Margin="140,480,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="315" Height="50"/>
        <ComboBox HorizontalAlignment="Left" Margin="140,550,0,0" VerticalAlignment="Top" Width="315" Height="50"/>
        <TextBox  HorizontalAlignment="Left" Margin="140,620,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="315" Height="360"/>

        <Label Content="Navn" HorizontalAlignment="Left" Margin="20,487,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="20,557,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Beskrivelse" HorizontalAlignment="Left" Margin="20,627,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Page>
